<Window x:Class="IHM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmallWorld" MinHeight="600" MinWidth="600"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Background="Gray"
        Loaded="Window_Loaded" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <DockPanel x:Name="panel">

        <StackPanel DockPanel.Dock="Top">
            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">
                    <Label x:Name="Nation1Label" Content="Peuple " />
                    <Label x:Name="Units1Label" Content="Unité restantes : "/>
                    <Label x:Name="Points1Label" Content="Point : "/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
                    <Label x:Name="Nation2Label" Content="Peuple " />
                    <Label x:Name="Units2Label" Content="Unité restantes : "/>
                    <Label x:Name="Points2Label" Content="Point : "/>
                </StackPanel>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0">
                    <Button HorizontalAlignment="Center" Height="25" Content="Fin du tour" Click="EndOfTurnButton_Click" Width="85"/>
                    <Label x:Name="StepLabel" Content="Tours restants : " />
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Label Name="MapLabel"/>
            <Label Name="InfoLabel"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="20" HorizontalAlignment="Center">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" DockPanel.Dock="Left">
                <Border BorderBrush="Black" BorderThickness="2">
                  <Grid Name="mapGrid" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
             </Border>
               
            </ScrollViewer>
            <StackPanel x:Name="unitInfoPanel" VerticalAlignment="Center" Orientation="Vertical" />
        </StackPanel>



    </DockPanel>

</Window>
