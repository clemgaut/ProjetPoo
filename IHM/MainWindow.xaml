<Window x:Class="IHM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IHM Principale" Height="600" Width="600"
        Loaded="Window_Loaded" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <DockPanel x:Name="panel">
        <Grid DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal">
                <Label Name="InfoLabel"/>
                <Label Name="MapLabel"/>
            </StackPanel>
            <Button HorizontalAlignment="Right" Content="Fin du tour" Click="Button_Click" />
        </Grid>
       <!-- <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"> -->
            <Grid Name="mapGrid" Background="Azure" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <!--</ScrollViewer>-->
        
    </DockPanel>
</Window>
