<Window x:Class="IHM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmallWorld"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        WindowStyle="None"
        IsManipulationEnabled="True"
        BorderThickness="0"
        ResizeMode="NoResize"
        Unloaded="Window_Unloaded"
        Loaded="Window_Loaded" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Resources>
        <Cursor x:Key="Cursor1">Arrow</Cursor>
    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="background.jpeg"/>
    </Window.Background>
    <DockPanel x:Name="panel">

        <StackPanel Orientation="Horizontal"  DockPanel.Dock="Top" Margin="20">
            <StackPanel Orientation="Vertical" Background="DodgerBlue" HorizontalAlignment="Stretch">
                <Label x:Name="Nation1Label" Content="Peuple " FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                <Label x:Name="Units1Label" Content="Unité restantes : "/>
                <Label x:Name="Points1Label" Content="Point : "/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button HorizontalAlignment="Center" Height="30" Margin="10" Content="Fin du tour" Click="EndOfTurnButton_Click" Width="120"/>
                <Label x:Name="StepLabel" FontWeight="ExtraBold" Height="30" Content="Tours restants : " HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Button HorizontalAlignment="Center" Height="30" Margin="10" Content="Menu" Click="Menu_Click" Width="120"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Background="Firebrick" HorizontalAlignment="Stretch">
                <Label x:Name="Nation2Label" Content="Peuple " FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                <Label x:Name="Units2Label" Content="Unité restantes : "/>
                <Label x:Name="Points2Label" Content="Point : "/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Label Name="MapLabel"/>
            <Label Name="InfoLabel"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="20" HorizontalAlignment="Center" >
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" DockPanel.Dock="Left">
                <Grid Name="mapGrid" HorizontalAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="10" />
            </ScrollViewer>
            <StackPanel x:Name="unitInfoPanel" VerticalAlignment="Center" Orientation="Vertical" />
        </StackPanel>

    </DockPanel>

</Window>
