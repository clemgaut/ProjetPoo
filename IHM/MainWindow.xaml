<Window x:Class="IHM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IHM Principale" Height="600" Width="600"
        Loaded="Window_Loaded" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <DockPanel x:Name="panel">
        <StackPanel DockPanel.Dock="Bottom">
            <Grid VerticalAlignment="Top">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                    <Label Content="Peuple1" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Label Content="Peuple2" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Grid VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal">
                    <Label Name="InfoLabel"/>
                    <Label Name="MapLabel"/>
                </StackPanel>
                <Button HorizontalAlignment="Right" Content="Fin du tour" Click="Button_Click" />
            </Grid>
        </StackPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" DockPanel.Dock="Top">
            <Grid Name="mapGrid" Background="Azure" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </ScrollViewer>
    </DockPanel>
</Window>
